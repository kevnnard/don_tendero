<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("partials/head") -%>
    <title>Subir Producto</title>  
</head>
<%- include("partials/aside") %>
<%- include("partials/navigation") %>
<body>
    <% if (user) { %>
    <div class="container p-4">
        <div class="row">
            <div class="col-md-4 offset-md-4">
                <div class="card">
                    <div class="card-header text-center">
                        <h3>Subir Producto</h3>
                    </div>
                    <div class="card-body">
                        <form action="/upload" method="post" enctype="multipart/form-data">
                            <div class="input-group mb-3">
                                <div class="custom-file">
                                    <input type="file" name="image" class="" id="inputGroupFile02"  for="inputGroupFile02" aria-describedby="inputGroupFileAddon02" value="Cargar archivo">
                                </div>
                            </div>
                            <div class="form-group">
                                <input type="number" id="sku" name="sku" placeholder="Sku o Identificador Unico" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <input type="text" name="nombre_producto" placeholder="Nombre del Producto" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <input type="text" name="proveedor" placeholder="Proveedor" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <textarea name="descripcion" placeholder="Descripcion" class="form-control" required></textarea>
                            </div>
                            <div class="form-group">
                                <input type="number" name="precio_sku_producto" placeholder="Precio por producto" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <input type="number" name="stock" placeholder="Inventario disponible" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <button class="btn btn-success btn-block">
                                    Subir...
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <% } else { %>
        <%- include("404") %>
    <% } %>

    <%- include("partials/footer") %>
</body>

</html>